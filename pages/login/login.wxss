a{
    text-decoration: none;
}
/*顶部图像*/
.top{
    width: 100%;
    height: 286rpx;
    margin: auto;
    border-bottom: 1px solid #e5e5e5;
    background: #f5f5f5;
    overflow: hidden;
}
.top-image{
    margin: auto;
    margin-top: 52rpx;
    margin-bottom: 50rpx;
    width: 136rpx;
    height: 136rpx;
}
.top-image>image{
    width: 136rpx;
    height: 136rpx;   
}
.top>text{
    margin-left: 33rpx;  
    font-size: 36rpx;
    color: #999999;
}
/*账号密码部分*/
.form1{
    font-size: 32rpx;
    width: 100%;
    background: #fff;
    border-bottom: 1px solid #e4e4e4;
}
.login{
    width: 668rpx;
    margin: auto;
}
.user{
    padding-top: 35rpx;
    width: 100%;
    height: 100rpx;
    border-bottom: 1px solid #e4e4e4;
    display: flex;
    justify-content:space-between;
    align-items: center;
}
.user>input{
    width: 520rpx;
    border: none;
    color: #cccccc;
}
.user2{
    border: none;
}
.user2>i{
    display: inline-block;
    width: 32rpx;
}
/*登录部分*/
.bootom_div{
  background: #f5f5f5;
  padding-top: 40rpx;
  height: 818rpx;
}
.btn{
    display: block;
    margin: 41rpx auto 34rpx auto;
    width: 660rpx;
    height: 94rpx;
    line-height: 94rpx;
    font-size: 32rpx;
    color: #fff;
    background-color: #f14d41;
    border: none;
    -webkit-border-radius: 10px;
    -moz-border-radius: 10px;
    border-radius: 10px;
    padding: 0;
}
/*注册*/
.to-login{
    width: 668rpx;
    margin: auto;
    display: flex;
    justify-content:space-between;
}
.to-login{
    font-size: 24rpx;
}
.to-login>text{
    color: #f34b3e;
}
/*第三方账号登录*/
.dotted{
    height: 88rpx;
    position: relative;
    width: 668rpx;
    margin: auto;
    margin-top: 82rpx;
    border-top: 1px dotted #e4e4e4;
}
.dotted>text{
    padding: 0 17rpx;
    font-size: 30rpx;
    position: absolute;
    left: 210rpx;
    top: -15rpx;
    color: #989898;
    background: #f5f5f5;
}
.bottom_img{
  margin-top: 70rpx;
    display: flex;
    justify-content:space-around;
    font-size: 40rpx;
}
.bottom_img li{
    width: 120rpx;
    display: flex;
    flex-wrap:wrap;
    justify-content:center;
}
.bottom_img li image{
    width:120rpx;
    height:120rpx;
    margin-bottom: 38rpx;
}
