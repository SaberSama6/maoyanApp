/* pages/moviedetails/moviedetails.wxss */
.top{
  height: 416rpx;
  background-color: #261b16;
  padding: 31rpx;
  display: flex;
  flex-direction: column;
  /*flex-wrap:wrap;
  justify-content:space-between;*/
}
.movieimg{
   display: flex;
   justify-content:space-between;
}
.movieimg>image{
  width: 225rpx;
  height: 309rpx;
  border: 3rpx solid #fff;
}
.movieimg_content{
    width:428rpx;
    display: flex;
    flex-direction: column;
    color:#c7c7c2;
}
.cName{
  font-size: 34rpx;
  margin: 10rpx 0;
  color: #fff;
}
.eName{
  font-size: 20rpx;
  color:#fff;
}
.garden>image{
  width: 172rpx;
  height: 31rpx;
}
.garden_content{
  margin-left: 14rpx;
}
.garden{
  font-size: 30rpx;
  color:#fec600;
  display: flex;
  align-items:center;
  margin: 19rpx 0;
}
.garden_num{
  font-size: 22rpx;
}
.type{
  font-size: 28rpx;
  margin: 15rpx 0;
}
.region{
  font-size: 28rpx;
}
.time{
  font-size: 22rpx;
  margin: 18rpx 0;
}
.btn_img{
  width: 31rpx;
  height: 31rpx;
}
.moviebtn{
   display: flex;
   justify-content:space-between;
   margin-top: 28rpx;
}
.moviebtn>button{
  width: 335rpx;
  height: 72rpx;
  background:#57504a;
  color: #fff;
}
.body{
  font-size: 30rpx;
  font-weight:bold;
  padding: 0 32rpx;
  margin-top:40rpx;
  margin-bottom: 105rpx;  
}
.body_character{
    height: 133rpx;
    overflow: hidden;
    line-height: 48rpx;
}
.body_character2{
  line-height: 48rpx;
}
.body_btn>button{
    font-weight: 100;
    height: 48rpx;
    line-height: 48rpx;
    background: #fff;
}
.yao{
  height: 36rpx;
  width: 100%;
  background-color: #f5f5f5;
}
.duty{
  padding: 0 32rpx;
}
.duty_name{
  font-size: 30rpx;
  font-weight: bold;
  padding: 26rpx 0;
  display: flex;
  justify-content:space-between;
}
.direct{
  display: inline-block;
  width: 165rpx;
}
.duty_all{
  color: #939393;
}
.duty_img{
  display: flex;
  justify-content:flex-start;
}
.duty_img image{
  width: 145rpx;
  height: 187rpx;
  margin-right: 10rpx;
}
.direct_img{
  margin-right: 20rpx !important;
}
.scroll-view_H{
  display: flex;
  white-space:nowrap;
  width: 2000rpx;
}
.buy{
  position: fixed;
  bottom: 0;
  width: 100%;
}
.buy>button{
  font-size: 32rpx;
  background: #f14d41;
  color: #fff;
  height: 105rpx;
  line-height: 105rpx;
}